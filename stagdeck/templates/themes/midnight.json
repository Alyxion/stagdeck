{
  "name": "midnight",
  "version": "1.0",
  "extends": "aurora.json",

  "palette": {
    "bg": "#0f172a",
    "bg_alt": "#1e293b",
    "bg_muted": "#334155",
    "bg_inverse": "#f8fafc",

    "fg": "#e2e8f0",
    "fg_muted": "#94a3b8",
    "fg_faint": "#64748b",
    "fg_inverse": "#0f172a",

    "border": "#334155",
    "border_muted": "#1e293b",
    "border_strong": "#475569",

    "heading": "#f8fafc",
    "text": "#e2e8f0",
    "text_muted": "#cbd5e1",
    "text_faint": "#94a3b8"
  },

  "slide": {
    "background": "${bg}",
    "title": { "color": "#c4d4e4", "size": 80, "weight": "bold" },
    "subtitle": { "color": "#a5b4c4", "size": 40 },
    "text": { "color": "#ffffff", "size": 32 },
    "bold": { "color": "#f59e0b" },
    "overlay": { "color": "rgba(0, 0, 0, 0.5)", "opacity": 0.5 },
    "blur": { "radius": 4 },
    "split_background": { "color": "${bg}" },
    "split_title": { "color": "#c4d4e4", "size": 50, "weight": "bold" },
    "split_subtitle": { "color": "#a5b4c4", "size": 30 },
    "split_text": { "color": "#ffffff", "size": 32 },
    "split_bold": { "color": "#f59e0b" }
  }
}
